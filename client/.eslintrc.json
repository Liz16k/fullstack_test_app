{
  "extends": ["plugin:react/recommended", "airbnb", "airbnb/hooks"],
  "plugins": ["react"],
  "rules": {
    "react/prop-types": 0,
    "linebreak-style": ["error", "windows"],
    "react/function-component-definition": [
      2,
      {
        "namedComponents": "arrow-function",
        "unnamedComponents": "arrow-function"
      }
    ]
  },
  "overrides": [
    {
      "files": ["index.jsx"],
      "rules": {
        "no-undef": "off"
      }
    }
  ]
}
